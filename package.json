{
  "name": "mern-gql-heroku",
  "version": "1.0.0",
  "description": "Demonstration of hosting a MERN stack application with GraphQL and ES6 syntax on Heroku",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec babel-node server.js",
    "start": "node server.js",
    "heroku-postbuild": "cd ./client && npm install && npm run build"
  },
  "keywords": [
    "mern",
    "gql",
    "graphql",
    "heroku",
    "node",
    "es6",
    "mongodb",
    "apollo"
  ],
  "author": "Kaushal Joshi",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^14.3.2",
    "express": "^4.17.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0",
    "mongoose": "^6.1.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "nodemon": "^2.0.15"
  }
}
